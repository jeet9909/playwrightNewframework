{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "Scalable Playwright framework for UI and API testing",
  "private": true,
  "type": "module",
  "scripts": {
  "test": "node ./scripts/run-and-report.js",
    "test:ui": "playwright test tests/ui",
    "test:api": "playwright test tests/api",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
  "allure:generate": "allure generate reports/allure-results -o reports/allure-report --clean",
  "allure:open": "allure open reports/allure-report",
    "codegen": "playwright codegen",
    "install-browsers": "playwright install",
    "posttest": "node ./scripts/posttest-allure.cjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "dotenv": "^16.3.1",
    "allure-playwright": "^2.0.0",
    "allure-commandline": "^2.25.0"
  }
}
